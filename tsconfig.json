{
  "compilerOptions": {
    "target": "es2022",
    "skipLibCheck": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "types": ["node", "vite/client"]
  },
  "include": ["src/**/*.js"],
  "exclude": ["node_modules"]
}
